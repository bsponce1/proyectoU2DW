
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home Administrador</title>
    @Styles.Render("~/Content/css")
</head>
<body class="bg-light">
    <div class="contairner">
        
        <div class="row" style="padding-bottom:30px;">

            <div class="row text-center">
                <h2 class="text-primary">Home Administrador</h2>
            </div>
            
            <div style="padding-left: 20%; padding-right: 20%;">
                <div class="row" style="text-align:right; padding:10px;">
                    <a href="~/Pelicula/Nuevo" class="btn btn-primary">Agregar Película</a>
                </div>
                <br />

                <div class="row" style="text-align:right; padding:10px">
                    <a href="~/Pelicula/Editar" class="btn btn-primary">Editar Película</a>
                </div>
                <br />

                <div class="row" style="text-align:right; padding:10px">
                    <a href="~/Admin/Peliculas" class="btn btn-primary">Eliminar Película</a>
                </div>
                <br />

                <div class="row" style="text-align:right; padding:10px">
                    <a href="~/Usuario/Nuevo" class="btn btn-primary">Agregar Usuario</a>
                </div>
                <br />

                <div class="row" style="text-align:right; padding:10px">
                    <a href="~/Admin/Usuarios" class="btn btn-primary">Usuarios</a>
                </div>

            </div>

        </div>

    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
