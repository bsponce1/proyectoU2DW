@model List<ProyectoDesarrWebU2.Models.ViewModels.ListPeliculaViewModel>
@{
    ViewBag.Title = "Peliculas";
}

<h2>@ViewBag.Title</h2>

<div class="container">
     <div class="col-md-12">

        <div class="row" style="text-align: right; padding: 10px">
            <a href="~/Pelicula/Nuevo" class="btn btn-primary">Agregar</a>
        </div>
      </div>  
    <div class="row">
        @foreach (var oElemento in Model)
        {
            <div class="card" style="width: 18rem;">
                <img src="@oElemento.imgpel" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@oElemento.titulopel</h5>
                    <p class="card-text"></p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Precio: @oElemento.preciopel</li>

                </ul>
                <div class="card-body">
                    <a class="btn btn-outline-danger" href="@Url.Action("Editar", "Pelicula", new {id=oElemento.idpel})">Editar</a>
                    <a class="btn btn-dark" href="#">Comprar</a>
                    <a class="btn btn-danger" onclick="if (confirm('¿Está seguro de querer eliminar está pelicula?'))
                            { window.location.href = 'Eliminar/@oElemento.idpel' }">Eliminar</a>
                </div>
            </div>

        }
     </div>

</div>